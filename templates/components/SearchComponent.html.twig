<div class="ml-4" {{attributes}}>
	<label>
    <input data-model="query" value="{{query}}" class="placeholder:italic placeholder:text-slate-400 bg-white w-full border-slate-300 rounded-md py-2 pl-9 pr-3 sm:text-sm" placeholder="Search for posts ..." type="text" name="search"/></label>
	<ul class="bg-white border border-gray-100 mt-2 absolute">
    {% for post in this.posts %}
		<li class="pl-8 pr-2 py-1 border-b-2 border-gray-100 relative hover:bg-yellow-50 hover:text-gray-900">
			<a href="{{ path('posts_show', { id: post.id }) }}">{{post.title}}</a>
		</li>
    {% endfor %}
	</ul>
</div>
